{
  "name": "initrepo-cli",
  "version": "1.0.2",
  "description": "A CLI tool to extract and analyze codebase context for AI consumption and scaffold new projects",
  "type": "module",
  "main": "src/main.js",
  "bin": {
    "initrepo-cli": "./bin/initrepo.js"
  },
  "scripts": {
    "start": "node bin/initrepo.js",
    "dev": "node bin/initrepo.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "cli",
    "codebase",
    "analysis",
    "ai",
    "documentation",
    "extraction",
    "scaffolding",
    "nextjs",
    "react",
    "python",
    "automation"
  ],
  "author": "InitRepo Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "globby": "^14.0.0",
    "picocolors": "^1.0.0",
    "fast-xml-parser": "^4.3.2"
  },
  "devDependencies": {
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "memfs": "^4.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/initrepo/cli.git"
  },
  "bugs": {
    "url": "https://github.com/initrepo/cli/issues"
  },
  "homepage": "https://github.com/initrepo/cli#readme"
}
